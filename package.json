{
  "name": "react-ant-boilerplate",
  "version": "0.1.0",
  "author": "Bruno Agostini <brunogsa.92@gmail.com>",
  "keywords": [
    "React",
    "React Router",
    "GraphQL",
    "Apollo",
    "Ant Design",
    "Babel",
    "Webpack",
    "ESLint",
    "Storybook",
    "Enzyme",
    "Jest"
  ],
  "scripts": {
    "start": "rimraf build && webpack-dev-server --config .webpack/dev.config.js",
    "clean": "rimraf dist",
    "production": "npm run clean && webpack --config .webpack/production.config.js --progress --profile --colors",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest --coverage",
    "storybooks": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "antd": "^3.3.3",
    "email-validator": "^1.1.1",
    "prop-types": "^15.6.1",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-hot-loader": "3.1.3",
    "react-router-dom": "4.2.2",
    "redux": "^3.7.2",
    "sleep-promise": "^2.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "v4.0.0-alpha.4",
    "@storybook/addon-info": "v4.0.0-alpha.4",
    "@storybook/react": "v4.0.0-alpha.4",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.2",
    "babel-jest": "^22.4.3",
    "babel-loader": "7.1.2",
    "babel-plugin-emotion": "^9.1.0",
    "babel-plugin-import": "^1.6.7",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-boilerplate": "1.1.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-2": "6.24.1",
    "copy-webpack-plugin": "4.2.3",
    "css-loader": "^0.28.11",
    "emotion": "^9.1.0",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.0",
    "eslint": "4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "1.1.5",
    "fs": "0.0.1-security",
    "html-webpack-plugin": "2.30.1",
    "jest": "^22.4.3",
    "open-browser-webpack-plugin": "0.0.5",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "16.2.0",
    "rimraf": "2.6.2",
    "storybook-router": "^0.3.3",
    "style-loader": "^0.20.3",
    "url-loader": "0.6.2",
    "webpack": "^4.8.1",
    "webpack-dev-server": "^3.1.4"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.jest/shim.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.jest/assets-transformer.js",
      "\\.(css|less)$": "<rootDir>/.jest/assets-transformer.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ]
  }
}
